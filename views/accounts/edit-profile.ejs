<% layout('bodyPlate') -%>

<div class="container">
	<h1>修改資料</h1>
	<div class="row">
		<div class="col-sm-6 col-md-4">
			<img src="<%= user.profile.picture %>" alt="" class="img-circle imgresponsive img-center" />
			<br />
			<input type="submit" value='更新大頭貼'  />
			<div class="form-group">
				<label>姓名:</label>
				<input type="text"  name='name' value=<%= user.profile.name %> />			
			</div>
			<div class="form-group">
				<label>住址:</label>
				<input type="text" name="adress" id="adress"  value=<%= user.profile.adress %>/>
			</div>
				
			<button type="submit" class="btn btn-success">送出</button>
		</div>
	</div>
</div>